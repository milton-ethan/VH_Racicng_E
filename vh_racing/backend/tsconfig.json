{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",              // Output the compiled files to the dist directory
    "rootDir": "./server",           // Set the root directory to server folder
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "server/**/*.ts",               // Includes all TypeScript files in the server directory
    "types/**/*.d.ts"               // Includes type declaration files
  ],
  "exclude": [
    "node_modules"                  // Exclude node_modules to avoid unnecessary compilation
  ]
}
